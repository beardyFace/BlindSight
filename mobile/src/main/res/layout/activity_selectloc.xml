<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:columnCount="2"
    android:rowCount="6"
    android:background="@mipmap/theia_bg2">

    <Button
        android:id="@+id/button1"
        android:text="Location One"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="0"
        android:layout_column="0" />

    <!--<Button
        android:id="@+id/button1"
        android:text="Location One"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/round_button"
        android:textColor="#fff" />-->

    <Button
        android:id="@+id/button2"
        android:text="Location Two"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="0"
        android:layout_column="1"/>
    <Button
        android:id="@+id/button3"
        android:text="Location Three"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="1"
        android:layout_column="0"/>
    />
    <Button
        android:id="@+id/button4"
        android:text="Location Four"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="1"
        android:layout_column="1" />

    <Button
        android:id="@+id/button5"
        android:text="Location Five"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="2"
        android:layout_column="0" />
    <Button
        android:id="@+id/button6"
        android:text="Location Six"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_row="2"
        android:layout_column="1" />

    <Button
        android:id="@+id/button7"
        android:text="Change Name Of Selected Location"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_column="0" />
    <Button
        android:id="@+id/button8"
        android:text="Help"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="1"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_row="3"
        android:layout_column="1" />

    <Button
        android:id="@+id/button9"
        android:text="Voice"
        android:textColor="#000000"
        android:background="@drawable/rounded_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_columnSpan="2"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_row="4"
        android:layout_column="0" />
    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:textColor="#000000"
        android:layout_width="155dp"
        android:layout_height="20dp"
        android:layout_columnSpan="2"
        android:layout_gravity="center"
        android:layout_row="5"
        android:layout_column="0"/>

    </GridLayout>
